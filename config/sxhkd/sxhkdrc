# media/special keys
# mute/unmute
XF86AudioMute
    amixer set Master toggle; notify-send "Toggle Mute"

# volume
XF86AudioRaiseVolume
   amixer set Master 5%+; notify-send "Volume Up: [$(amixer get Master | egrep -o "[0-9]+%")]"

XF86AudioLowerVolume
    amixer set Master 5%-; notify-send "Volume Down: [$(amixer get Master | egrep -o "[0-9]+%")]"

XF86AudioPlay
   MPD_PORT=6600 mpc toggle

XF86AudioNext
   MPD_PORT=6600 mpc next

XF86AudioPrev
   MPD_PORT=6600 mpc prev

###############
# bspwm hotkeys
###############

# Toggle floating
control + alt + d
    bspc node -t \~floating

# insert receptacle, or clear receptacles on current desktop
# super + {_,shift} + d
#    {bspc node -i,for win in `bspc query -N -d -n .leaf.!window`; do bspc node $win -k; done}

# rotate, balance
control + {_,shift} + comma
    bspc node $(bspc query -N -n -n .!leaf || echo @/) {-R 90,-B}

control + apostrophe
    bspc node -s last

# hide current node, or restore a queried hidden node
super + {_,shift} + i
    bspc node {,$(bspc query -N -d -n .hidden | head -n 1)} -g hidden

# Focus on floating / tiled
alt + {e,w}
    bspc node -f {next.floating,next.tiled}

# Shutdown
super + shift + x
  systemctl poweroff

  # Back to lxdm
super + shift + BackSpace
  killall bspwm

# close and kill
control + q
  bspc node -c

# alternate between the tiled and monocle layout
control + m
  bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
#control + y
  #bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc #node last.leaf -n focused

# swap the current node and the biggest node
super + g
  bspc node -s biggest

#############
# state/flags
############

# set the window state
super + {t,shift + t,s,f}
  bspc node -t '~{tiled,pseudo_tiled,floating,fullscreen}'

# set the node flags
super + ctrl + {x,y,z}
  bspc node -g {locked,sticky,private}

############
# focus/swap
############

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
control + {space,b,comma,period}
  bspc node -f @{parent,brother,first,second}

# focus the next/previous node
control + {_,shift + } slash
  bspc node -f {next,prev}

# focus the next/previous desktop
control + bracket{left,right}
  bspc desktop -f {prev,next}

# focus the last node/desktop
#control + {grave,Tab}
#  bspc {node,desktop} -f last

# focus the older or newer node in the focus history
control + {i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on

# focus or send to the given desktop
control + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

control + bracket{left,right}
  bspc desktop -f {prev,next}

###########
# preselect
##########

# preselect the direction
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

########################
# resize tiled/floating
#######################

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
  bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
  bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

alt + {_,shift} + Tab
    bspc node -f {next,prev}.local

# move a floating window
super + {Left,Down,Up,Right}
  xdo move {-x -20,-y +20,-y -20,-x +20}

# Change window gap
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

