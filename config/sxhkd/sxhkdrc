 #       bspc pointer -u

 super + !button{1-3}
   bspc pointer --track %i %i

# window gap via mouse wheel
super + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))

# screenshot
super + Print
    scrot

